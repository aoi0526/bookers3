<% book.book_comments.each do |book_comment| %>
  <tr>
    <td>
      <%= image_tag book_comment.user.get_profile_image, format: 'jpeg', fallback: "no-image.jpeg", size: '60x60' %><br>
      <%= link_to(@book.user) do %>
        <%= book_comment.user.name %>
      <% end %>
    </td>
    <td><%= book_comment.comment %></td>
    <td>
      <% if user_signed_in? && current_user.id == book_comment.user_id %>
        <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger btn-sm" %>
      <% end %>
    </td>
  </tr>
<% end %>